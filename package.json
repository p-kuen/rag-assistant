{
  "name": "rag-assistant-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Ressourcenoptimierte Fullstack RAG-Plattform",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" --parallel dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "dev:frontend": "pnpm --filter @rag-assistant/frontend dev",
    "dev:backend": "pnpm --filter @rag-assistant/backend-orchestrator dev",
    "build:frontend": "pnpm --filter @rag-assistant/frontend build",
    "build:backend": "pnpm --filter @rag-assistant/backend-orchestrator build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "rag",
    "monorepo",
    "vue",
    "rust",
    "meilisearch"
  ]
}
